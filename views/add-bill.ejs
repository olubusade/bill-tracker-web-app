<% include partials/header.ejs %>
<div class="container">
    <% if (message != '') { %>
    <p class="text-center text-danger">
        <%= message %>
    </p>
    <% } %>
    
    <form class="add-bill-form" action="" method="post" enctype="multipart/form-data">
        <p class="font-weight-bolds" style="font-size: 20px; font-family:Verdana, Geneva, Tahoma, sans-serif;">Bill Details</p>
        <div class="form-row">
            <div class="form-group col-md-3">
                <input type="text" class="form-control" name="billname" id="bill-name" placeholder="Bill Name"
                    required>
            </div>
            <div class="col-auto">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <div class="input-group-text">@</div>
                    </div>
                    <input type="text" name="username" class="form-control" id="inlineFormInputGroup" placeholder="Username" required>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="input-group col-md-4 mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">&#8358;</span>
                </div>
                <input type="number" class="form-control" style="width:10px;" name="amount" id="amount" placeholder="Amount"
                    required>
                <div class="input-group-append">
                    <span class="input-group-text">.00</span>
                </div>
            </div>
        </div>
        
        <div class="form-row">
            <div class="col-auto my-1 mb-3">
                <select name="category" class="custom-select mr-sm-2" id="category">
                    <option selected>Choose category</option>
                    <option value="1">Potential customer</option>
                    <option value="2">New customer</option>
                    <option value="3">Impusive customer</option>
                    <option value="4">Discount customer</option>
                    <option value="5">Loyal customer</option>
                </select>
            </div>
            <div class="form-group col-md-3 mb-3">
                <input type="text" class="form-control" name="item" id="item" placeholder="Item" required>
            </div>
        </div>
            
        <div class="form-row">
            <div class="form-group mb-3">
                <input type="text" name="saleconsultant" class="form-control" id="bill-name" placeholder="Sale consultant" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group mb-3">
                <textarea class="form-control" name="note" placeholder="Note..." style="border-radius: 0.5rem; width: 300px" id="exampleFormControlTextarea1"
                    rows="2"></textarea>
            </div>
        </div>
        
        <p class="font-weight-bolds" style="font-size: 20px; font-family:Verdana, Geneva, Tahoma, sans-serif;">Time Period</p>
        <div class="form-row">
            <label class="col-sm-2">Occurs:</label>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="occurs" id="inlineRadio1" value="">
                <label class="form-check-label" for="inlineRadio1">Once</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="occurs" id="inlineRadio2" value="">
                <label class="form-check-label" for="inlineRadio2">Repeating</label>
            </div>
        </div>
        <div class="form-row">
            <label class="col-sm-2">Starts:</label>
            <div class="form-group col-md-3">
                <input type="text" autocomplete="off" class="form-control" name="starttime" id="user1" placeholder="yyyy-mm-dd" required/>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success"><i class="fa fa-database"></i> Submit</button>
        </div>
    </form>
</div>
</div>
</body>

</html>
